<h1> Welcome </h1>
<% if @preschools.size == 0 || !@preschools %>
	<h3> You haven't added any preschools yet</h3>
<% else %>
	<% @preschools.all.each do |preschool| %>
		<li><%= preschool.name %></li>
		<li><%= preschool.address %></li>
		<li><%= preschool.cost %></li>
		<li><%= preschool.summary %></li>	
	<% end %>
<% end %>